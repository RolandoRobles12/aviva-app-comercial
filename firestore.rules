rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if user has admin role in users collection OR if they're in admins collection by UID
      return isAuthenticated() && (
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin') ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAvivaEmail() {
      return isAuthenticated() &&
        request.auth.token.email.matches('.*@avivacredito.com$');
    }

    // Users collection - users can read their own data, admins can read/write all
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated() && isAvivaEmail();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Kiosks - anyone authenticated can read, only admins can write
    match /kiosks/{kioskId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // System Config - anyone authenticated can read, only admins can write
    match /system_config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Dynamic Texts - anyone authenticated can read, only admins can write
    match /dynamic_texts/{textId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Checkins - users can create their own, read their own, admins can read/write all
    match /checkins/{checkinId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Schedules - users can read their own, admins can read/write all
    match /schedules/{scheduleId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    // Time Off Requests - users can create/read their own, admins can read/write all
    match /time_off_requests/{requestId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Attendance Stats - users can read their own, admins can read all
    match /attendanceStats/{statId} {
      allow read: if isOwner(statId) || isAdmin();
      allow write: if isAdmin();
    }

    // Locations - users can create/read their own, admins can read all
    match /locations/{locationId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // User Metrics - users can read their own, admins can read/write all
    match /userMetrics/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    // Metrics Reports - admins only
    match /metricsReports/{reportId} {
      allow read, write: if isAdmin();
    }

    // Badges - anyone authenticated can read, admins can write
    match /badges/{badgeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User Badges - users can read their own, admins can read/write all
    match /userBadges/{userBadgeId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    // Career Paths - anyone authenticated can read, admins can write
    match /careerPaths/{pathId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User Career Progress - users can read their own, admins can read/write all
    match /userCareerProgress/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    // Leagues - anyone authenticated can read, admins can write
    match /leagues/{leagueId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // League Participants - anyone authenticated can read, admins can write
    match /leagueParticipants/{participantId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Notifications - users can read their own, admins can read/write all
    match /notifications/{notificationId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // FCM Tokens - users can create/read/update their own
    match /fcm_tokens/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Prospectos Detectados - users can create/read their own, admins can read/write all
    match /prospectos_detectados/{prospectoId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Holidays - anyone authenticated can read, admins can write
    match /holidays/{holidayId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Visits - users can create/read their own, admins can read/write all
    match /visits/{visitId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Goals (Metas Comerciales) - anyone authenticated can read, admins can write
    match /goals/{goalId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Metas (legacy name for Goals) - anyone authenticated can read, admins can write
    match /metas/{metaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Giros Relevantes - anyone authenticated can read, admins can write
    match /giros_relevantes/{giroId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Configuraci√≥n de Bonos - anyone authenticated can read, admins can write
    match /configuracion_bonos/{bonoId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Dashboard Stats - admins only (aggregate stats)
    match /dashboardStats/{statId} {
      allow read, write: if isAdmin();
    }

    // Vendors (proveedores)
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Products (productos)
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Productos (Spanish name)
    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Promotores (sellers)
    match /promotores/{promotorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Routes (rutas de vendedores de campo)
    match /routes/{routeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Route Tracking
    match /route_tracking/{trackId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Seller Routes
    match /seller_routes/{routeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Location History
    match /location_history/{locationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Admins collection - admins can read/write, authenticated users can create their own UID document
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      // Allow authenticated users to create/update their own UID document (for auto-login)
      allow create, update: if isAuthenticated() && adminId == request.auth.uid;
    }

    // Catch-all rule for admin access to any other collection
    // This ensures admins can access any collection even if not explicitly listed
    match /{collection}/{document=**} {
      allow read: if isAdmin();
    }
  }
}
