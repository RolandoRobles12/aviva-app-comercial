rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAvivaEmail() {
      return isAuthenticated() &&
        request.auth.token.email.matches('.*@avivacredito.com$');
    }

    // Users collection - users can read their own data, admins can read/write all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && isAvivaEmail();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Kiosks - anyone authenticated can read, only admins can write
    match /kiosks/{kioskId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // System Config - anyone authenticated can read, only admins can write
    match /system_config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Dynamic Texts - anyone authenticated can read, only admins can write
    match /dynamic_texts/{textId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Checkins - users can create their own, read their own, admins can read/write all
    match /checkins/{checkinId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Schedules - users can read their own, admins can read/write all
    match /schedules/{scheduleId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Time Off Requests - users can create/read their own, admins can read/write all
    match /time_off_requests/{requestId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Attendance Stats - users can read their own, admins can read all
    match /attendanceStats/{statId} {
      allow read: if isOwner(statId) || isAdmin();
      allow write: if isAdmin();
    }

    // Locations - users can create/read their own, admins can read all
    match /locations/{locationId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // User Metrics - users can read their own, admins can read/write all
    match /userMetrics/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Metrics Reports - admins only
    match /metricsReports/{reportId} {
      allow read, write: if isAdmin();
    }

    // Badges - anyone authenticated can read, admins can write
    match /badges/{badgeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User Badges - users can read their own, admins can read/write all
    match /userBadges/{userBadgeId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Career Paths - anyone authenticated can read, admins can write
    match /careerPaths/{pathId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User Career Progress - users can read their own, admins can read/write all
    match /userCareerProgress/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Leagues - anyone authenticated can read, admins can write
    match /leagues/{leagueId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // League Participants - anyone authenticated can read, admins can write
    match /leagueParticipants/{participantId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Notifications - users can read their own, admins can read/write all
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // FCM Tokens - users can create/read/update their own
    match /fcm_tokens/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Prospectos Detectados - users can create/read their own, admins can read/write all
    match /prospectos_detectados/{prospectoId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Holidays - anyone authenticated can read, admins can write
    match /holidays/{holidayId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Visits - users can create/read their own, admins can read/write all
    match /visits/{visitId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
  }
}
