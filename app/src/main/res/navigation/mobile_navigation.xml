<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Dashboard Principal -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.promotoresavivatunegocio_1.ui.home.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" />

    <!-- Metas Comerciales -->
    <fragment
        android:id="@+id/navigation_commercial_goals"
        android:name="com.promotoresavivatunegocio_1.ui.commercialgoals.CommercialGoalsFragment"
        android:label="Mis metas comerciales"
        tools:layout="@layout/fragment_commercial_goals" />

    <!-- Metas & Bono - Front -->
    <fragment
        android:id="@+id/navigation_metas_bono"
        android:name="com.promotoresavivatunegocio_1.ui.metasbono.MetasBonoFragment"
        android:label="Metas &amp; Bono"
        tools:layout="@layout/fragment_metas_bono" />

    <!-- Mi Carrera - Front -->
    <fragment
        android:id="@+id/navigation_mi_carrera"
        android:name="com.promotoresavivatunegocio_1.ui.micarrera.MiCarreraFragment"
        android:label="Mi Carrera"
        tools:layout="@layout/fragment_mi_carrera" />

    <!-- Registro (Menú con 3 opciones) -->
    <fragment
        android:id="@+id/navigation_registro"
        android:name="com.promotoresavivatunegocio_1.ui.registro.RegistroFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_registro" />

    <!-- Métricas y Reportería -->
    <fragment
        android:id="@+id/navigation_metrics"
        android:name="com.promotoresavivatunegocio_1.ui.metrics.MetricsFragment"
        android:label="Métricas"
        tools:layout="@layout/fragment_metrics" />

    <!-- Asistencia (WebView) -->
    <fragment
        android:id="@+id/navigation_attendance"
        android:name="com.promotoresavivatunegocio_1.ui.attendance.AttendanceFragment"
        android:label="Asistencia"
        tools:layout="@layout/fragment_attendance" />

    <!-- Ligas y Competencias -->
    <fragment
        android:id="@+id/navigation_leagues"
        android:name="com.promotoresavivatunegocio_1.ui.leagues.LeaguesFragment"
        android:label="Ligas"
        tools:layout="@layout/fragment_leagues" />

    <!-- Scorecard de Bonos -->
    <fragment
        android:id="@+id/navigation_scorecard"
        android:name="com.promotoresavivatunegocio_1.ui.scorecard.ScorecardFragment"
        android:label="Scorecard de Bonos"
        tools:layout="@layout/fragment_scorecard" />

    <!-- Perfil con Insignias y Plan de Carrera -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.promotoresavivatunegocio_1.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

    <!-- Aviva Tu Negocio (búsqueda de prospectos, visitas, mapa) -->
    <fragment
        android:id="@+id/navigation_aviva_tu_negocio"
        android:name="com.promotoresavivatunegocio_1.ui.avivatunegocio.AvivaTuNegocioFragment"
        android:label="Aviva Tu Negocio"
        tools:layout="@layout/fragment_aviva_tu_negocio" />

    <!-- Admin (oculto en bottom nav, accesible para admins) -->
    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.promotoresavivatunegocio_1.ui.admin.AdminFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin" />

    <!-- Asistente de Ayuda (Chatbot) -->
    <fragment
        android:id="@+id/navigation_help_assistant"
        android:name="com.promotoresavivatunegocio_1.HelpAssistantFragment"
        android:label="Asistente de Ayuda"
        tools:layout="@layout/fragment_help_assistant" />

    <!-- Trámites (Software de HR) -->
    <fragment
        android:id="@+id/navigation_tramites"
        android:name="com.promotoresavivatunegocio_1.ui.tramites.TramitesFragment"
        android:label="Trámites"
        tools:layout="@layout/fragment_tramites" />

</navigation>
