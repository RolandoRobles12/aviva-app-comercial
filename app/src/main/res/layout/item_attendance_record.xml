<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Type Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_container">

            <TextView
                android:id="@+id/tvTypeIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸšª"
                android:textSize="20sp"
                android:gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Record Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRecordType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrada"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvRecordTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:30 AM"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Oficina Central"
                android:textSize="12sp"
                android:textColor="@color/tertiary_text"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Status Badge -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/success_background">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Tiempo"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                android:padding="6dp"
                android:fontFamily="sans-serif-medium" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>