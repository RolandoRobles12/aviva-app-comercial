<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ============================================ -->
        <!-- ENCABEZADO SUPERIOR (SECCIÓN COMPLETA) -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Primera fila: Nombre del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Lado izquierdo: Nombre y subtítulo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNombreUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[NOMBRE_DEL_USUARIO]"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scorecard Incentivos"
                        android:textSize="17sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </LinearLayout>

            <!-- Segunda fila: Cajas de multiplicador, ganancia y mes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <!-- Caja del Multiplicador (verde oscuro) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_green_dark_box"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multiplicador"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvMultiplicador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5X"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Caja de Ganancia mensual (verde brillante) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_green_bright_box"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ganancia mensual"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvGananciaMensual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6,768"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Texto del mes -->
                <TextView
                    android:id="@+id/tvMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MES: Octubre 2025"
                    android:textSize="16sp"
                    android:textColor="#2C2C2C"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Espacio entre encabezado y tabla -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#F4F4F4" />

        <!-- ============================================ -->
        <!-- TABLA PRINCIPAL (VISTA VERTICAL Y LEGIBLE) -->
        <!-- ============================================ -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:background="#FFFFFF"
            android:padding="24dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- FILA DE ENCABEZADOS (verde oscuro, texto blanco) -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#006341"
                    android:minHeight="70dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="Métrica"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:text="Descripción"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="Métricas"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="Resultado"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Categoría"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Puntaje"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/table_border" />

                </TableRow>

                <!-- FILA 1: CAC -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:minHeight="100dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="CAC"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCacDescripcion"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:text="Costo Operativo / Venta Mensual"
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCacMetricas"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="$68,520/\n$553,000"
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:lineSpacingExtra="4dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCacResultado"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="12.4%"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCacCategoria"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="B"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#F7A232"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCacPuntaje"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="25"
                        android:textSize="17sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                </TableRow>

                <!-- FILA 2: CALIDAD -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:minHeight="100dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="CALIDAD"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCalidadDescripcion"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:text="Calificación entre los clientes que hacen sus primeros pagos y los clientes que no pagan."
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCalidadMetricas"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="Pagos completados: 73%\nPrimeros pagos no hechos: 7.6%"
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:lineSpacingExtra="4dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCalidadResultado"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="8.0"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCalidadCategoria"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="B"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#F7A232"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCalidadPuntaje"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="15"
                        android:textSize="17sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                </TableRow>

                <!-- FILA 3: NIM -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:minHeight="100dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="NIM"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvNimDescripcion"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:text="Pagos hechos por los clientes menos el costo de fondeo y las pérdidas de crédito."
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvNimMetricas"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="Ingresos: $382,111\nPérdidas: $143,041\nFondeo: $70,766"
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:lineSpacingExtra="4dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvNimResultado"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="44%"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvNimCategoria"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="B"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#F7A232"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvNimPuntaje"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textSize="17sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                </TableRow>

                <!-- FILA 4: CRECIMIENTO -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:minHeight="100dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="CRECIMIENTO"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:maxLines="1"
                        android:ellipsize="none"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCrecimientoDescripcion"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:text="Crecimiento del portafolio contra el mes anterior."
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCrecimientoMetricas"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="Portafolio Sep: 4.5M\nPortafolio Oct: 4.9M"
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:lineSpacingExtra="4dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCrecimientoResultado"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="9.0%"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCrecimientoCategoria"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#F7A232"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                    <TextView
                        android:id="@+id/tvCrecimientoPuntaje"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textSize="17sp"
                        android:textColor="#2C2C2C"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/table_border" />

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

        <!-- Espacio entre tabla y logo -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#F4F4F4" />

        <!-- ============================================ -->
        <!-- LOGO / TEXTO "aviva" -->
        <!-- ============================================ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aviva"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#00A86B"
            android:gravity="center"
            android:padding="16dp"
            android:background="#F4F4F4" />

        <!-- ============================================ -->
        <!-- BARRA DE PUNTAJE TOTAL (PARTE INFERIOR) -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A86B"
            android:orientation="horizontal"
            android:padding="28dp"
            android:gravity="center_vertical"
            android:minHeight="100dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PUNTAJE TOTAL"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingStart="24dp" />

            <TextView
                android:id="@+id/tvPuntajeTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingEnd="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
