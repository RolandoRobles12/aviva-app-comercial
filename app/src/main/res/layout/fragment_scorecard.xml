<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scorecard de Bonos"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="sans-serif-medium" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- BLOQUE 1: CAC -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título CAC -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAC"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Descripción -->
                <TextView
                    android:id="@+id/tvCacDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Costo de adquisición de cliente"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginBottom="12dp" />

                <!-- Métricas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métricas:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvCacMetricas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Colocación: $150,000\n- Llamadas: 60\n- Tasa de cierre: 25%"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp" />

                <!-- Resultado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultado: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCacResultado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$2,500"
                        android:textSize="14sp"
                        android:textColor="@color/success_color" />

                </LinearLayout>

                <!-- Categoría -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCacCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CAC B"
                        android:textSize="14sp"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <!-- Puntaje -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntaje: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCacPuntaje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- BLOQUE 2: CALIDAD -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALIDAD"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvCalidadDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Calidad de las visitas y seguimiento"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métricas:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvCalidadMetricas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Visitas completadas: 45\n- Seguimientos efectivos: 38\n- Prospectos calificados: 28"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultado: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCalidadResultado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="84%"
                        android:textSize="14sp"
                        android:textColor="@color/success_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCalidadCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Excelente"
                        android:textSize="14sp"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntaje: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCalidadPuntaje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- BLOQUE 3: NIM -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvNimDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Número de interacciones mensuales"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métricas:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvNimMetricas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Llamadas realizadas: 180\n- Emails enviados: 95\n- Reuniones: 32"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultado: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvNimResultado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="307 interacciones"
                        android:textSize="14sp"
                        android:textColor="@color/success_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvNimCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alto"
                        android:textSize="14sp"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntaje: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvNimPuntaje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- BLOQUE 4: CRECIMIENTO -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRECIMIENTO"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvCrecimientoDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Crecimiento vs mes anterior"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métricas:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvCrecimientoMetricas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Ventas mes anterior: $120,000\n- Ventas mes actual: $150,000\n- Nuevos clientes: +12"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultado: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCrecimientoResultado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+25%"
                        android:textSize="14sp"
                        android:textColor="@color/success_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCrecimientoCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Destacado"
                        android:textSize="14sp"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntaje: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvCrecimientoPuntaje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- USUARIO Y MES -->
        <!-- ============================================ -->
        <TextView
            android:id="@+id/tvUsuarioMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juan Pérez - MES: Octubre 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium" />

        <!-- ============================================ -->
        <!-- PIE DEL SCORECARD - RESUMEN -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scorecard Incentivos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Puntaje total:"
                        android:textSize="15sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvPuntajeTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Multiplicador:"
                        android:textSize="15sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvMultiplicador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5x"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:alpha="0.3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ganancia mensual:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvGananciaMensual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6,768"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes: Octubre 2025"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
