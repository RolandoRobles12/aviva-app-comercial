<?xml version="1.0" encoding="utf-8"?>
<!-- Layout optimizado para tablets 10" (sw720dp) - Vista de dos paneles ampliada -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Layout de dos paneles (Master-Detail) con panel izquierdo mÃ¡s amplio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- Panel izquierdo (Master) - Controles y resumen -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="@dimen/master_pane_width"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <!-- Header con selector de perÃ­odo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MÃ©tricas y Reportes"
                            android:textSize="@dimen/text_title"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_medium" />

                        <!-- Botones de perÃ­odo - Vertical para tablet -->
                        <Button
                            android:id="@+id/btnDaily"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginBottom="@dimen/spacing_small"
                            android:text="ðŸ“… Diario"
                            android:textSize="@dimen/text_body"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginBottom="@dimen/spacing_small"
                            android:text="ðŸ“Š Semanal"
                            android:textSize="@dimen/text_body"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:text="ðŸ“ˆ Mensual"
                            android:textSize="@dimen/text_body"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Resumen rÃ¡pido de mÃ©tricas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen RÃ¡pido"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <!-- Ventas resumidas -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’° Ventas"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalSales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/metrics_value_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_small" />

                        <TextView
                            android:id="@+id/tvSalesTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†‘ +10%"
                            android:textSize="@dimen/text_caption" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Prospectos resumidos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¯ Prospectos"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvProspectsGenerated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/metrics_value_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_small" />

                        <TextView
                            android:id="@+id/tvProspectsTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†‘ +5%"
                            android:textSize="@dimen/text_caption" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Asistencia resumida -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â° Asistencia"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAttendanceRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="@dimen/metrics_value_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_small" />

                        <TextView
                            android:id="@+id/tvAttendanceTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†’ 0%"
                            android:textSize="@dimen/text_caption" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Ranking -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ† Ranking"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRankPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#0"
                            android:textSize="@dimen/metrics_value_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PosiciÃ³n General"
                            android:textSize="@dimen/text_caption" />

                        <TextView
                            android:id="@+id/tvLeaguePosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#0 en Liga"
                            android:textSize="@dimen/text_body"
                            android:layout_marginTop="@dimen/spacing_tiny" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Panel derecho (Detail) - Detalles y grÃ¡ficas -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <!-- SecciÃ³n de Ventas Detallada -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas Detalladas"
                    android:textSize="@dimen/text_heading"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvSalesAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0"
                                    android:textSize="@dimen/metrics_value_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monto Total"
                                    android:textSize="@dimen/metrics_label_text_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvAverageTicket"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0"
                                    android:textSize="@dimen/text_xlarge"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ticket Promedio"
                                    android:textSize="@dimen/metrics_label_text_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvConversionRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textSize="@dimen/text_xlarge"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tasa ConversiÃ³n"
                                    android:textSize="@dimen/metrics_label_text_size" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- SecciÃ³n de Prospectos Detallada -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prospectos Detallados"
                    android:textSize="@dimen/text_heading"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/card_padding">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvProspectsContacted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_xlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contactados"
                                android:textSize="@dimen/metrics_label_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvProspectsConverted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_xlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Convertidos"
                                android:textSize="@dimen/metrics_label_text_size" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- SecciÃ³n de Asistencia -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asistencia"
                    android:textSize="@dimen/text_heading"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/card_padding">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvDaysWorked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_xlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DÃ­as Trabajados"
                                android:textSize="@dimen/metrics_label_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvHoursWorked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 h"
                                android:textSize="@dimen/text_xlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Horas Totales"
                                android:textSize="@dimen/metrics_label_text_size" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Objetivo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Objetivo del Mes"
                    android:textSize="@dimen/text_heading"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/spacing_medium">

                            <TextView
                                android:id="@+id/tvGoalProgress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0 / 100"
                                android:textSize="@dimen/text_large" />

                            <TextView
                                android:id="@+id/tvGoalPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="@dimen/text_large"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progressGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="0"
                            android:minHeight="12dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Actividad y Puntos en Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actividad"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/card_padding">

                                <TextView
                                    android:id="@+id/tvVisitsCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="@dimen/text_xlarge"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Visitas Completadas"
                                    android:textSize="@dimen/metrics_label_text_size" />

                                <TextView
                                    android:id="@+id/tvKiosksVisited"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Kioscos Visitados"
                                    android:textSize="@dimen/text_body"
                                    android:layout_marginTop="@dimen/spacing_small" />

                                <TextView
                                    android:id="@+id/tvCitiesVisited"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Ciudades"
                                    android:textSize="@dimen/text_body" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puntos"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/card_padding">

                                <TextView
                                    android:id="@+id/tvTotalPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="@dimen/text_xlarge"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Puntos Totales"
                                    android:textSize="@dimen/metrics_label_text_size" />

                                <TextView
                                    android:id="@+id/tvMonthlyPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+0"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/spacing_small" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Este Mes"
                                    android:textSize="@dimen/text_body" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- BotÃ³n de refresh -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_rotate"
        app:tint="@color/white"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
