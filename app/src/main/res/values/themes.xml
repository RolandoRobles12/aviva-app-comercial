<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PromotoresAvivaTuNegocio" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- Material Design 3 button attributes -->
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_text</item>
        <item name="colorSecondaryContainer">@color/light_green_background</item>
        <item name="colorOnSecondaryContainer">@color/primary_text</item>

        <!-- Button colors for Material3 -->
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- ThemeOverlay for TextButton -->
    <style name="ThemeOverlay.Material3.Button.TextButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/primary</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_container</item>
    </style>
</resources>